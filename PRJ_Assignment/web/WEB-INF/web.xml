<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RouteFilter</filter-name>
        <filter-class>Filter.RouteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RouteFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>timetable</servlet-name>
        <servlet-class>controller.TimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>attend</servlet-name>
        <servlet-class>controller.AttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listattend</servlet-name>
        <servlet-class>controller.ListAttendController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.auth.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.auth.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>controller.auth.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>timetablestudent</servlet-name>
        <servlet-class>controller.student.TimetableStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>listattendstudent</servlet-name>
        <servlet-class>controller.student.ListAttendStudentController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>timetable</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>attend</servlet-name>
        <url-pattern>/lecturer/attend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listattend</servlet-name>
        <url-pattern>/lecturer/listattend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/homecontroller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>timetablestudent</servlet-name>
        <url-pattern>/student/timetable</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listattendstudent</servlet-name>
        <url-pattern>/student/listattend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
